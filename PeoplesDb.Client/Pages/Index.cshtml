@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (!Model.People.Any())
{
    <p class="lead">
        No people exist yet, Maybe try adding one?
    </p>
}
else
{
    <form method="post">
        <ul class="list-group">
            @foreach (var person in Model.People)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@person.FirstName @person.LastName</span>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-page="./edit" asp-route-id="@person.Id" class="btn btn-primary">Edit</a>
                        <button type="submit" asp-page-handler="delete" asp-route-id="@person.Id">Delete</button>
                    </div>
                </li>
            }
        </ul>
    </form>
}

<div class="container-fluid">
    <a asp-page="./create" class="btn btn-dark">Add a new Person</a>
</div>

